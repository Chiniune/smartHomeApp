<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="172dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageProductGrid"
        android:layout_width="172dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/b4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/proNameGrid"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:text="abd efg air conditional alibaba omg luon hmm omg s"
        app:layout_constraintStart_toStartOf="@+id/imageProductGrid"
        app:layout_constraintTop_toBottomOf="@+id/imageProductGrid" />


    <TextView
        android:id="@+id/textsale"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/md_amber_900"
        android:textStyle="bold"
        android:text="Sale 10%"
        app:layout_constraintStart_toStartOf="@+id/proNameGrid"
        app:layout_constraintTop_toBottomOf="@+id/proNameGrid" />
    <TextView
        android:id="@+id/proPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24$"
        android:textColor="@color/md_red_900"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textsale"
        app:layout_constraintStart_toStartOf="@+id/textsale"/>

    <TextView
        android:id="@+id/proSold"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:paddingBottom="5dp"
        android:ellipsize="end"
        android:text="Sold 120"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/proPrice"
        app:layout_constraintTop_toTopOf="@+id/proPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>